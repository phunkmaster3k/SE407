@model SCFOWebsite.ViewModels.Home.OrgViewModel

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<div class="row">
    <div class="col-md-4 myTable" style="padding:20px">
        @using (Html.BeginForm("Login", "Users", FormMethod.Post))
            {
            @Html.Label("User Name");
            @Html.TextBox("username", null, new { @class = "form-control" });
            <br />
            @Html.Label("In Game Handle");
            @Html.TextBox("handle", null, new { @class = "form-control" });
            <br />
            @Html.Label("Email");
            @Html.TextBox("email", null, new { @class = "form-control" });
            <br />
            @Html.Label("Organization");
            @Html.DropDownList("orgs", Model.OrgsList.Select(c => new SelectListItem() { Text = c.Name }), "None", new { @class = "form-control" });
            <br />
            @Html.Label("Password");
            @Html.Password("password", null, new { @class = "form-control" });
            <br />
            @Html.Label("Re-type Pasword");
            @Html.Password("repassword", null, new { @class = "form-control" });
            <br />
            <input type="submit" value="Register" class="btn btn-primary" />
            <br />
            
        }
    </div>
</div>